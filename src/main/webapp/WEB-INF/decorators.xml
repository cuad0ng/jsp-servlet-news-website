<?xml version="1.0" encoding="UTF-8" ?>
<decorators defaultdir="/decorators">
    <!--any urls that are exclude will never be decorated by Sitemesh-->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator name="user" page="index.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>